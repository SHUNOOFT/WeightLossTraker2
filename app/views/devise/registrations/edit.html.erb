<html>

  <header>
    <h2>Edit Account Information</h2>
  </header>

  <body>
  <%= stylesheet_link_tag 'edit_registrations', media: 'all' %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> (Minimum <%= @minimum_password_length %> numbers and characters)<br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :target_weight %><br />
      <div class="input-group">
        <%= f.text_field :target_weight %>
        <span class="input-addon">kg</span>
      </div>
    </div>

    <div class="field">
      <%= f.label :target_date %><br />
      <%= f.date_field :target_date %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(We need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>

  <%= form_with model: current_user, url: registration_path(current_user), method: :delete, local: true do |form| %>
    <div>
      <%= form.submit 'Delete Account', data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>

  <%= link_to "Back", :back, class: 'back-button' %>
  </body>
</html>