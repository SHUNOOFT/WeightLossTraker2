<html>


    <meta charset="UTF-8">
    <%= stylesheet_link_tag 'progress_chart', media: 'all' %>
  <header>
    <h1>Progress Chart</h1>
  </header>

  <div class="Back">
    <%= link_to "Back", :back, class: 'back-button' %>
  </div>

  <body>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <canvas id="myChart" width="400" height="400"></canvas>
      <script>
        document.addEventListener('DOMContentLoaded', function () {
            var ctx = document.getElementById('myChart').getContext('2d');
            var progressData = <%= @progress_data_json.present? ? @progress_data_json.html_safe : '[]' %>;

            var dates = progressData.map(entry => entry.date);
            var weights = progressData.map(entry => entry.weight);

            var myChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: dates,
                    datasets: [{
                        label: '体重',
                        data: weights,
                        borderColor: 'rgb(75, 192, 192)',
                        tension: 0.1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
      </script>
  </body>

</html>